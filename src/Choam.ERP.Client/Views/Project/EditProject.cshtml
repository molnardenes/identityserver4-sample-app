@model Choam.ERP.Client.ViewModels.EditProjectViewModel

<h2 class="leftMarginSmaller">Edit Project</h2>
<form asp-action="EditProject" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal leftMarginDefault">
        <div class="form-group">
            <div>Project name</div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <div>Revenue</div>
            <input asp-for="Revenue" class="form-control" />
        </div>
        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>
        </div>
    </div>
</form>